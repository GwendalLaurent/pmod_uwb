{deps, [
    grisp,
    {epmd, {git, "https://github.com/erlang/epmd", {ref, "4d1a59"}}}
]}.

{erl_opts, [debug_info]}.

{plugins, [rebar3_grisp]}.

{grisp, [
    {otp, [
        {version, "25"}
    ]},
    {deploy, [
        {pre_script, "rm -rf /run/media/michel/GRISP_SD/*"},
        {destination, "/run/media/michel/GRISP_SD"},
        {post_script, "umount /run/media/michel/GRISP_SD"}
    ]}
]}.

{shell, [{apps, []}]}.

{relx, [
    {release, {robot, "0.1.0"}, [{epmd, none}, robot]}
]}.

% {edoc_opts,[{todo,true},{private,true}]}.

{ct_opts, [
    {sys_config, "./config/tests.config"},
    {keep_logs, 20}
]}.

{cover_enabled, true}.

{dialyzer, [
    {warnings, [underspecs, no_return]}
]}.

{profiles, [
    {initiator, [{ip_address, "192.168.2.75"}]},
    {responder, [{ip_address, "192.168.2.74"}]}
]}.
